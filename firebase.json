{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "build.sh",
      "firebase-deploy.sh",
      "copy-docs.mjs",
      "ui-debug.log",
      "firebase-debug.log",
      "**/.*",
      "**/node_modules/**",
      "**/apps/**",
      "**/github/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "api",
        "destination" : "build/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
